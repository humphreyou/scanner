<resources>

    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/action_bar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SdkTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!--style name="SdkTheme" parent="@android:style/Widget.Material.ActionBar"-->
        <!--item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/status_bar</item-->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#EC3227</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">#363636</item>   <!-- preference一级文本颜色-->
        <item name="android:textColorSecondary">#9C9C9C</item> <!--preference二级文本颜色-->
    </style>



    <style name="GridTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="actionBarStyle">@style/myTheme.ActionBar</item>
        <item name="actionBarTheme">@style/myTheme.ActionBar.ArrowColor</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/action_bar</item>
    </style>

    <!-- This is a custom theme to be used with the action bar of the theme which will only override the text color of the action bar -->
    <style name="myTheme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="background">@color/action_bar</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

    </style>

    <!-- This is the custom style theme to be used for changing the text color of the settings action bar -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>>
    </style>

    <style name="myTheme.ActionBar.ArrowColor" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>


</resources>
