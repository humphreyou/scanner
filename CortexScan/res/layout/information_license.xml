<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:rowCount="13">

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="0"
                android:text="App Version:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/app_version"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="1"
                android:text="SDK Version:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/sdk_version"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="2"
                android:text="Library Version:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/library_version"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="2"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="3"
                android:text="Decoder Version:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/decoder_version"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <Space
                android:layout_height="15dp"
                android:layout_column="0"
                android:layout_row="4"
                android:gravity="center" />

            <TextView
                android:id="@+id/licenseTypeText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="5"
                android:text="License Type:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseType"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="5"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseStatusText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="6"
                android:text="License Status:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseStatus"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="6"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseLastSyncText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="7"
                android:text="License Last Sync:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseLastSync"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="7"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseSyncDaysText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="8"
                android:text="License Sync Days:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/licenseSyncDays"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="8"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <Space
                android:layout_height="15dp"
                android:layout_column="0"
                android:layout_row="9"
                android:gravity="center" />

            <TextView
                android:id="@+id/androidIDText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="10"
                android:text="Android ID:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/androidID"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="10"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/wifiMacAddrText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="11"
                android:text="Wifi Mac Address:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/wifiMacAddr"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="11"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/currentDateTimeText"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="12"
                android:text="Current Date:"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/currentDateTime"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_row="12"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:typeface="serif" />

        </GridLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0000" />

    </LinearLayout>
</ScrollView>



